{
  "name": "nobre-crm",
  "private": true,
  "version": "1.0.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
