    "autoprefixer": "^10.4.16",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "tsc-files": "^1.1.4",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^4.0.18"
  }
